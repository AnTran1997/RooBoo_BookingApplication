<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_search_view"
    >



    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC2ACCFF"
        >

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:minHeight="200dp"
        android:weightSum="8"

        >
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:layout_marginTop="16dp"


            android:text="ROOBOO"
            android:textColor="@color/colorAccent"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Mang lại cho bạn trải nghiệm tốt "
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            >
            <EditText

                android:id="@+id/plain_text_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/white"
                android:hint="Nhập địa điểm. Ví dụ : Hội An ..."
                android:textStyle="italic"
                android:inputType="text"
                android:textSize="14sp"
                android:drawableLeft="@drawable/search_icon"
                android:paddingLeft="5dp"
                />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/plain_text_input"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:background="#12C5FF"
                android:src="@drawable/right_arrow" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Bạn Có muốn gợi ý không nào?"


            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginRight="52dp"
            android:layout_marginLeft="52dp"

            android:drawableLeft="@drawable/creative"
            />


    </LinearLayout>



</RelativeLayout>