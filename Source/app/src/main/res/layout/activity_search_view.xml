<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_search_view">



    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC2ACCFF"
        >

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:minHeight="200dp"
        android:weightSum="8"

        >
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:layout_marginTop="16dp"


            android:text="ROO BOO"
            android:textColor="@color/colorAccent"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/multicolore"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Mang lại cho bạn trải nghiệm tốt nhất"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textSize="16dp"
            android:fontFamily="@font/semibold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">
            <EditText

                android:id="@+id/plain_text_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edt_search_view"
                android:hint="Nhập địa điểm. Ví dụ : Hội An ..."
                android:inputType="text"
                android:textSize="15sp"
                android:fontFamily="@font/medium"
                android:drawableLeft="@drawable/ic_search"
                android:paddingLeft="15dp"
                android:textColor="#000"
                />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/plain_text_input"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_search_view"
                app:srcCompat="@drawable/ic_arrow"
                android:id="@+id/btnGoiy"/>


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Bạn Có muốn gợi ý không nào?"
            android:id="@+id/txtGoiy"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginRight="52dp"
            android:layout_marginLeft="52dp"

            android:drawableLeft="@drawable/ic_creative" />


    </LinearLayout>



</RelativeLayout>